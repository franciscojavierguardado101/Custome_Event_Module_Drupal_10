<?php

use Drupal\Core\Entity\EntityTypeManagerInterface;
use Drupal\my_event\Entity\Event;

/**
 * Implements hook_entity_type_build().
 */
function my_event_entity_type_build(EntityTypeManagerInterface $entity_type_manager) {
  $entity_type = $entity_type_manager->getDefinition('node');
  $entity_type->addBundle('event');
}

/**
 * Implements hook_entity_base_field_info().
 */
function my_event_entity_base_field_info($entity_type) {
  if ($entity_type->id() === 'node') {
    return []; // Field definitions are already defined in the Event class
  }
}
